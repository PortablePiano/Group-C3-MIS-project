Public static void readTxtFile()
//reads text files and them in arrays lists
File file = new File(drive.txt);
Scanner in = new Scanner(file);
While (in.hasnextline()){
names.add(in.next());
make.add(in.next());
model.add(in.next());
color.add(in.next());
licensePlate.add(in.next());
names.add(in.nextInt());
}

